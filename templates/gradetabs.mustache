<div class="nav-container">
  <ul class="nav nav-tabs nav-fill mt-4" id="myTab" role="tablist">
    <li class="nav-item ml-3" role="presentation">
      <button class="nav-link certifheading w-100 active" id="eval-tab" data-toggle="tab" data-target="#evaluate" type="button" role="tab" aria-controls="evaluate" aria-selected="true">
          {{> mod_competgrade/svg/chat}}
          {{#str}}evaluate, mod_competgrade{{/str}}
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link certifheading w-100" id="certify-tab" data-toggle="tab" data-target="#certify" type="button" role="tab" aria-controls="certify" aria-selected="false">
          {{> mod_competgrade/svg/certif}}
          {{#str}}certify, mod_competgrade{{/str}}
      </button>
    </li>
    <li class="nav-item mr-3" role="presentation">
      <button class="nav-link certifheading w-100" id="list-tab" data-toggle="tab" data-target="#list" type="button" role="tab" aria-controls="list" aria-selected="false">
          {{> mod_competgrade/svg/list}}
          {{#str}}list, mod_competgrade{{/str}}
      </button>
    </li>
  </ul>
  <div class="void"></div>
</div>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade w-100 show active" id="evaluate" role="tabpanel" aria-labelledby="eval-tab">
    <div class="tab-eval tab-inner">
        {{> mod_competgrade/tab/evaluate}}
    </div>
  </div>
  <div class="tab-pane w-100 fade" id="certify" role="tabpanel" aria-labelledby="certify-tab">
    <div class="tab-certify tab-inner">
        {{> mod_competgrade/tab/certify}}
    </div>
  </div>
  <div class="tab-pane w-100 fade" id="list" role="tabpanel" aria-labelledby="list-tab">
    <div class="tab-list tab-inner">
        {{> mod_competgrade/tab/list}}
    </div>
  </div>
</div>