<div class="commentsection">
    <div class="d-flex usernavigation">
        <div class="userimage mr-2">
            <img src="{{{picture}}}" alt="{{fullname}}" class="rounded-circle">
        </div>
        <div class="commentuserinfo">
            <div class="fullname text-truncate">{{fullname}}</div>
            {{#note}}<div class="note">{{{note}}}</div>{{/note}}
        </div>
    </div>
    {{#comments}}
        <div class="comment position-relative" data-region="commenttext">
            {{#commenttitle}}<div><strong>{{{commenttitle}}}</strong></div>{{/commenttitle}}
            <span class="shortened" data-region="shorttext">{{#shortentext}}200, {{{commenttext}}}{{/shortentext}}</span>
            <span class="fulltext d-none" data-region="fulltext">{{{commenttext}}}</span>
            <div class="small position-absolute" style="right: 4px; bottom: 2px;">
                &nbsp;
                <a href="#" class="showmore d-none" data-action="showmore">{{#str}}more, mod_competgrade{{/str}}</a>
                <a href="#" class="showless d-none" data-action="showless">{{#str}}less, mod_competgrade{{/str}}</a>
            </div>
        </div>
    {{/comments}}
</div>