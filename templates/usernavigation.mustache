<div class="d-flex align-items-center usernavigation">
    <button class="btn btn-icon icon-no-margin mx-2" data-action="prevuser" title="{{#str}}previoususer, mod_competgrade{{/str}}">
        <i class="fa fa-chevron-left"></i>
    </button>
    <div class="d-flex usernavigation">
        <div class="userimage mr-2">
            <img src="{{user.picture}}" alt="{{user.fullname}}" class="rounded-circle">
        </div>
        <div class="userinfo">
            <div class="fullname text-truncate">{{user.fullname}}</div>
            <div class="period text-truncate">{{user.email}}</div>
        </div>
    </div>
    <button class="btn btn-icon icon-no-margin mx-2" data-action="nextuser" title="{{#str}}nextuser, mod_competgrade{{/str}}">
        <i class="fa fa-chevron-right"></i>
    </button>
</div>